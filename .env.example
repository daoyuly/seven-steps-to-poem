# Seven Steps to Poem - Environment Configuration

# Application Settings
APP_NAME="Seven Steps to Poem"
APP_VERSION="1.0.0"
DEBUG=true
ENVIRONMENT="development"
HOST="0.0.0.0"
PORT=8000
WORKERS=1

# Database Configuration
DATABASE_URL="postgresql://postgres:password@localhost:5432/sevensteps"
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_ECHO=false

# Redis Configuration
REDIS_URL="redis://localhost:6379/0"
REDIS_MAX_CONNECTIONS=100
REDIS_SOCKET_TIMEOUT=5

# Neo4j Configuration  
NEO4J_URL="bolt://localhost:7687"
NEO4J_USERNAME="neo4j"
NEO4J_PASSWORD="password"
NEO4J_DATABASE="neo4j"

# LLM Configuration
LLM_PROVIDER="openai"
OPENAI_API_KEY="your-openai-api-key-here"
# ANTHROPIC_API_KEY="your-anthropic-api-key-here"
LLM_MODEL="gpt-4-turbo"
LLM_TEMPERATURE=0.1
LLM_MAX_TOKENS=2000
LLM_TIMEOUT=60

# Vector Database Configuration
VECTOR_DB_PROVIDER="pinecone"
# PINECONE_API_KEY="your-pinecone-api-key-here"
PINECONE_ENVIRONMENT="us-west1-gcp"
VECTOR_DB_INDEX_NAME="seven-steps-problems"
VECTOR_DB_DIMENSION=1536

# Object Storage Configuration (MinIO for local development)
OBJECT_STORAGE_PROVIDER="minio"
MINIO_ENDPOINT="localhost:9000"
MINIO_ACCESS_KEY="minioadmin"
MINIO_SECRET_KEY="minioadmin"
MINIO_BUCKET_NAME="seven-steps-bucket"
MINIO_SECURE=false

# Message Queue Configuration
MESSAGE_QUEUE_PROVIDER="redis"
MESSAGE_QUEUE_REDIS_URL="redis://localhost:6379/1"

# Security Configuration
SECRET_KEY="your-secret-key-for-jwt-signing"
JWT_ALGORITHM="HS256"
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=8090
JAEGER_ENABLED=false
JAEGER_AGENT_HOST="localhost"
JAEGER_AGENT_PORT=6831
LOG_LEVEL="INFO"

# Workflow Configuration
MAX_EXECUTION_TIME=3600
RETRY_ATTEMPTS=3
RETRY_DELAY=5